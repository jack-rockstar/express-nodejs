<%- include("../template/cabeza.ejs",{tituloWeb:'Pagina de inicio'});  %> 
      
    <div class="container">
         <h1>Crud Mongodb</h1>
      <a href="/mascotas/crear" class="btn btn-outline-success d-grid gap-2 my-4">Crear nueva mascota
      
      </a>
       
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Accion</th>
              </tr>
            </thead>
            <tbody>
          
       <% if (arrays.length>0) { %>
         <% arrays.forEach(mascotas => { %>
            
                <tr>
                  <th scope="row"><%= mascotas.id %> </th>
                  <td><%= mascotas.nombre %></td>
                  <td><%= mascotas.descripcion %></td>
                  <td>
                    <a href="mascotas/<%= mascotas.id %>" class="btn btn-outline-warning btn-sm">Editar</a>
                  </td>
                </tr>
             <% }) %>
       <% } %>
       </tbody>
      </table>
    </div>
      
<%- include("../template/footer.ejs");  %>    
    
